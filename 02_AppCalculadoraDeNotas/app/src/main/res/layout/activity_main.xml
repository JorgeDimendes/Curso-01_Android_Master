<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edit_nota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:background="@color/light_gray"
        android:hint="Nota 1"
        android:inputType="number"
        android:maxLength="2"
        android:padding="20dp"
        android:text=""
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edit_nota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/light_gray"
        android:hint="Nota 2"
        android:inputType="number"
        android:textAlignment="center"
        android:maxLength="2"
        android:padding="20dp"
        android:text=""
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edit_nota3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_nota1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/light_gray"
        android:hint="Nota 3"
        android:textAlignment="center"
        android:inputType="number"
        android:maxLength="2"
        android:padding="20dp"
        android:text=""
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edit_nota4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_nota2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/light_gray"
        android:hint="Nota 4"
        android:inputType="number"
        android:textAlignment="center"
        android:maxLength="2"
        android:padding="20dp"
        android:text=""
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edit_faltas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_nota3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/light_gray"
        android:hint="NÃºmeros de Faltas"
        android:inputType="number"
        android:textAlignment="center"
        android:maxLength="2"
        android:padding="20dp"
        android:text=""
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_faltas"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/dark_gray"
        android:padding="10dp"
        android:text="@string/btn_calcular"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_calcular"
        android:gravity="center"
        tools:text="Aluno foi aprovado "
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>